@import "/icon/icon.wxss";
.container{
 flex-direction: column;
 align-content: space-between;
}
.bar{
  width: 100%; 
}
.title-bar{
  text-align: center; background-color: #eccac8;color: #fff;height: 80rpx;line-height: 80rpx;
}
.interval-bar{
  border-top: 25rpx solid #f0f0f0;
  text-align: center;background-color: #ffffff;color: #f7d9b3;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
}
.line{
  width: 100%;
  height: 1rpx;
  background-color: #f0f0f0;
}
.slide-bar{
  width: 100%;height: 500rpx;
}
.slide-image{
  width: 100%;height: 500rpx;
}
.teacher-list{
  display: flex;flex-direction: row;padding: 10rpx;flex-wrap: wrap;justify-content: space-evenly;background-color: #ffffff;
}
.teacher{
  width: 40%;margin-top: 35rpx;background-color: #f7d9b3;padding: 20rpx 30rpx 20rpx 20rpx;border-radius: 10rpx;
}
.teacher-block{
  width: 40%;height: 40%;margin-top: 35rpx;padding: 20rpx 30rpx 80rpx 20rpx;
}
.teacher-img{
  width: 100%;height: 250rpx;border:1px solid f0f0f0;border-radius: 10rpx;
}
.teacher-text{
  font-size: 20rpx;
}
.envir{
  background-color: #fff;
  padding-top: 20rpx; 
}
.envir-img-view{
  margin: 0 4%;
  width: 100%;
}
.envir-imgs{
  width: 92%;
  border:1px solid f0f0f0;
  border-radius: 10rpx;
}
.img-title{
  position: absolute;
  bottom: 10rpx;
}
.map-view{
  padding: 2%;
  background-color: #fff;
  text-align:center;
}
.maps{
  width:100%;
}
