<view class="container">
<view class="title-bar bar">音乐教室</view>
<view class="bar">
<swiper style="width:100%" indicator-dots="{{showBar.indicatorDots}}"
  autoplay="{{showBar.autoplay}}" interval="{{showBar.interval}}" duration="{{showBar.duration}}" circular="{{showBar.circular}}">
  <block wx:for="{{showBar.imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="100%" height="150"/>
    </swiper-item>
  </block>
</swiper>
</view>
<view class="interval bar">
  <view class="interval-bar">—— 名师推荐 ——</view>
  <view class="line"></view>
  <view class="teacher-list">
    <view class="teacher">
        <image class="teacher-img" src="../../img/wcs.jpg"></image>
        <p>王老师</p>
        <p>高级钢琴师</p>
    </view>
  </view>
</view>
<view class="interval bar">
  <view class="interval-bar">—— 学习环境 ——</view>
  <view class="line"></view>
  <view class="envir">
      <view class="img-view">
        <image class="imgs" src="../../img/987.png"></image>
        <text>123</text>
      </view>
  </view>
</view>
<view class="interval bar" style='margin-bottom:120rpx'>
  <view class="interval-bar">—— 学院地址 ——</view>
  <view class="line"></view>
  <map style='width:100%;height:400rpx'></map>
</view>
<view class='footer'>
  <view class="footer-button"><text>首页</text></view>
  <view class="footer-button"><text>课程</text></view>
  <view class="footer-button"><text>我的</text></view>
</view>
</view>